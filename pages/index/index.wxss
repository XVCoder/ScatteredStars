page {
  overflow: hidden;
  position: fixed;
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1534768423275&di=8e47f7c2519b915a6d0deb9d8adce4eb&imgtype=0&src=http%3A%2F%2Fi3.bbs.fd.zol-img.com.cn%2Fg5%2FM00%2F07%2F0D%2FChMkJlm3I5iIXsAsAAIlcN52egsAAgaXwBkm-MAAiWI993.jpg');
