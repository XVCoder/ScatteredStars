.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo image {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border: 1px white;
  border-radius: 50%;
  background-color: whitesmoke;
  box-shadow: 3px 3px 3px rgba(34, 25, 25, 0.5);
}

.userinfo text {
  font-size: 30rpx;
  color: white;
}

