page {
  background-color: whitesmoke;
}

.info {
  margin-top: 3rpx;
  position: relative;
  padding: 40rpx;
  background-color: white;
  min-height: 200rpx;
}

.thumbnail {
  clear: both;
  display: block;
  margin: auto;
  margin-bottom: 30rpx;
  width: 180rpx;
}

.info text {
  display: flex;
  margin-bottom: 5rpx;
  justify-content: center;
  font-size: 25rpx;
  color: #414141;
}

.description-item {
  margin-bottom: 50rpx;
}

.description {
  margin-top: 10rpx;
  padding: 25rpx;
  padding-bottom: 60rpx;
  float: right;
  font-size: 25rpx;
  color: gray;
  background-color: white;
}

.title {
  font-size: 28rpx;
  color: dimgray;
  display: block;
  margin-bottom: 10rpx;
}

.images {
  margin-bottom: 30rpx;
}

.links {
  margin-top: 30rpx;
  margin-bottom: 5rpx;
  color: #1db1e3;
  text-align: center;
}
