.top-bar {
  display: flex;
  position: fixed;
  top: 0rpx;
  padding-left: 30rpx;
  width: 100%;
  height: 60rpx;
  font-size: 35rpx;
  background-color: #20313b;
}

.top-bar text {
  margin-top: 5rpx;
  color: whitesmoke;
  border-bottom: 5rpx solid white;
}

.selected {
  color: #da7c0c;
  background-color: whitesmoke;
  /* border-bottom: 5rpx solid #da7c0c; */
}

.swiper-box {
  margin-top: 60rpx;
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: whitesmoke;
}

.page {
  text-align: center;
  padding: 10rpx;
  font-size: 30rpx;
}

.item-content {
  margin: 10rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  text-align: left;
  line-height: 1.5;
  color: dimgray;
  font-size: 28rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.5);
}

.item-createdtime{
  margin-top: 15rpx;
  font-size: 25rpx;
  color: gainsboro;
}